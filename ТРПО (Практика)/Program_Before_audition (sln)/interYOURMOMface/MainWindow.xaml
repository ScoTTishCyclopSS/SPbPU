                            <Label Content="Пол: " HorizontalAlignment="Left" Margin="0,156,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
                            <RadioButton x:Name="male" Content="М" Margin="52,161,0,0" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" FontStyle="Italic"/>
                            <RadioButton x:Name="female" Content="Ж" HorizontalAlignment="Left" Margin="94,161,0,0" VerticalAlignment="Top" Height="20" FontStyle="Italic" Width="46"/>
