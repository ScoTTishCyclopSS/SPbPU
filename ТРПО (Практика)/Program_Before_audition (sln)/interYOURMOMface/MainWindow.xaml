                            <Label Content="Дата рождения:" HorizontalAlignment="Left" Margin="0,116,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
                            <DatePicker x:Name="birthdate" HorizontalAlignment="Left" Margin="148,115,0,0" VerticalAlignment="Top" Width="452" Height="35" FontStyle="Italic"/>
                            <Label Content="Эл. почта:" HorizontalAlignment="Left" Margin="1,556,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="36"/>
                            <TextBox x:Name="email" HorizontalAlignment="Left" Height="35" Margin="99,556,0,0" TextWrapping="Wrap" Text="email" VerticalAlignment="Top" Width="501" FontStyle="Italic"/>
                            <Label Content="Образование:" HorizontalAlignment="Left" Margin="1,236,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
                            <ComboBox x:Name="education" HorizontalAlignment="Left" Margin="126,236,0,0" VerticalAlignment="Top" Width="474" Height="35" FontStyle="Italic"/>
                            <Label Content="Код подразделения:" HorizontalAlignment="Left" Margin="1,276,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
                            <TextBox x:Name="education_place_code" HorizontalAlignment="Left" Height="35" Margin="174,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="426" PreviewTextInput="education_place_code_PreviewTextInput" FontStyle="Italic"/>
                            <Label Content="Место проживания (регистрации):" HorizontalAlignment="Left" Margin="0,476,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
                            <TextBox x:Name="live_place" HorizontalAlignment="Left" Height="35" Margin="298,476,0,0" TextWrapping="Wrap" Text="адрес" VerticalAlignment="Top" Width="302" FontStyle="Italic"/>
                            <Label Content="Место работы:" HorizontalAlignment="Left" Margin="1,316,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
                            <TextBox x:Name="work_place" HorizontalAlignment="Left"  Margin="145,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455" Height="35" FontStyle="Italic"/>
                            <Label Content="Телефон предприятия:" HorizontalAlignment="Left" Margin="1,396,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="35"/>
